<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="301dp"
        android:layout_height="301dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/idBtn1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:tag="1"
                android:textSize="45sp" />

            <Button
                android:id="@+id/idBtn2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:tag="2"
                android:textSize="45sp" />

            <Button
                android:id="@+id/idBtn3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:tag="3"
                android:textSize="45sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/idBtn4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:tag="4"
                android:textSize="45sp" />

            <Button
                android:id="@+id/idBtn5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:tag="5"
                android:textSize="45sp" />

            <Button
                android:id="@+id/idBtn6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:tag="6"
                android:textSize="45sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/idBtn7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:tag="7"
                android:textSize="45sp" />

            <Button
                android:id="@+id/idBtn8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:tag="8"
                android:textSize="45sp" />

            <Button
                android:id="@+id/idBtn9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:tag="9"
                android:textSize="45sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

    <TextView
        android:id="@+id/idTexto"
        android:layout_width="212dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="JUEGO 3 EN RAYA"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <Button
        android:id="@+id/idSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="24dp"
        android:text="SALIR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idTexto" />

    <Button
        android:id="@+id/idReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="70dp"
        android:text="RESET"
        app:layout_constraintBottom_toBottomOf="@+id/idSalir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/idSalir" />

</android.support.constraint.ConstraintLayout>


